{
  "scripts": {
    "test": "jest --coverage --noStackTrace --silent",
    "dev": "live-server",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "dev:backend": "cd ../Backend && npm run dev",
    "lint": "eslint ./src"
  },
  "jest": {
    "verbose": false,
    "setupFiles": [
      "./setup-jest.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/app/**",
      "!**/assets/**",
      "!**/external/**",
      "!**/fixtures/**",
      "!**/lcov-report/**"
    ]
  },
  "type": "module",
  "dependencies": {
    "express": "^5.2.1",
    "global": "^4.4.0",
    "jquery": "^3.7.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.39.2",
    "globals": "17.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporter": "^4.3.0"
  }
}
